<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:background="@color/white"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/itemCarImagen"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:src="@drawable/test_puente_h"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:padding="10dp"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="2">

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/itemCarTitle"
                    android:gravity="center"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingEnd="5dp"
                    android:textAlignment="textStart"
                    android:text="Puente h" />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:rowCount="1"
                    android:columnCount="1"
                    android:layout_gravity="end">
                    <ImageView
                        android:id="@+id/itemCarRemoveItem"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_delete"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        />
                </GridLayout>


            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:columnCount="3">
                <TextView
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/itemCarUnidades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:textSize="15sp"
                    android:text="Unidates (5)"/>

                <ImageView
                    android:id="@+id/btnSubstract"
                    android:background="#2A4AEF"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/icon_remove"/>

                <ImageView
                    android:id="@+id/btnAddItem"
                    android:background="#2A4AEF"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_add"/>

            </GridLayout>

            <TextView
                android:textColor="@color/black"
                android:id="@+id/itemCarPrecioEnvio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Envio: $11.000.00"/>

            <TextView
                android:id="@+id/itemCarPrecioUnitario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$3.403.00"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/itemCarSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Subtotal $14.403.00"/>

        </LinearLayout>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>